<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= user.username %>'s Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/844cd933c3.js" crossorigin="anonymous"></script>
</head>
<body class="bg-gray-100 text-gray-800">

  <!-- Profile Section -->
  <div class="max-w-5xl mx-auto py-10 px-4">
    <div class="flex items-center space-x-10">
      <img src="/images/default-user.jpg" alt="Profile Pic" class="w-32 h-32 rounded-full object-cover border-2 border-gray-300" />
      <div>
        <div class="flex items-center space-x-4 mb-4">
          <h2 class="text-2xl font-bold"><%= user.username %></h2>
          <a href="/users/edit/profile/<%=user._id%>" class="bg-blue-500 text-white px-4 py-1 rounded hover:bg-blue-600">Edit Profile</a>
        </div>
        <div class="flex space-x-6 text-gray-600">
          <span><strong><%= user.posts.length %></strong> posts</span>
          <span><strong><%= user.followers %></strong> followers</span>
          <span><strong><%= user.following %></strong> following</span>
        </div>
      </div>
    </div>

    <!-- Posts Grid -->
    <div class="mt-10 grid grid-cols-3 gap-4">
      <% post.forEach(post => { %>
        <div class="relative group">
          
          <img src="data:image/jpeg;base64,<%= post.postImage.toString('base64')%>"class="w-full h-60 object-cover" />
          <div class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100 transition flex items-center justify-center text-white font-semibold"><P><%= post.likes.length%> <i class="fa-solid fa-heart text-red-500" aria-hidden="true"></i></p></div>
        </div>
      <% }) %>
    </div>
  </div>

</body>
</html>

